<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CryptoTerminal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#323232</item>
        <item name="colorPrimaryVariant">#323232</item>
        <item name="colorOnPrimary">#323232</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/selected</item>
        <item name="colorSecondaryVariant">@color/selected</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.CryptoTerminal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CryptoTerminal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/deselected</item>
    </style>

    <style name="Theme.CryptoTerminal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/deselected</item>
    </style>


    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>

    </style>

    <style name="SpinnerThemeDark" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">@color/white</item>
    </style>







    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#0A75FF</item>

        <!-- inactive thumb color
         <item name="colorSwitchThumbNormal">#686767</item>

         inactive track color (30% transparency)
         <item name="android:colorForeground">#42221f1f
        </item>-->
    </style>


</resources>