<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_background"
    tools:context=".Settings">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/shadow" />


    <ScrollView
        android:id="@+id/scrollView1"
        android:fadingEdge="vertical"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="20dp"
        android:layout_marginTop="-35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="true"
            >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text=" CONTACT INFORMATION"
        android:gravity="center"
        android:fontFamily="@font/cc"
        app:fontFamily="@font/cc"
        android:textColor="@color/dark"
     />


            <TextView
                android:id="@+id/textView233"
                android:text="If you want to contact us, have an idea how to improve the app, found bug, or
cooperation proposal, you can use one of the methods bellow."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/cc"
                android:gravity="center"
                app:fontFamily="@font/cc"
                android:textColor="@color/dark"
                />

            <TextView
                android:id="@+id/textView23"
                android:text="
Email :  daniel.lubenov9@gmail.com \n
Phone number : +359 888 072130 \n
Facebook: https://www.facebook.com/daniel.fotev"
                android:autoLink="web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/cc"
                android:gravity="center"
                app:fontFamily="@font/cc"
                android:textColor="@color/dark"
                />

            <TextView
                android:id="@+id/textView95"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="CONTACT FORM"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:fontFamily="@font/cc"
                app:fontFamily="@font/cc"
                android:padding="10dp"
                android:background="@color/gray"
                android:textColor="@color/white"
                />

            <EditText
                    android:layout_width="fill_parent"
                    android:id="@+id/et1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/dark"
                    android:hint="Email"
                 android:maxLength="30"
                android:inputType="textEmailAddress" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:id="@+id/et2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/dark"
                    android:gravity="top"
                    android:hint="Your Message"
                    android:fitsSystemWindows="true"
                    android:breakStrategy="balanced"
                    android:inputType="textMultiLine"
                    android:maxLength="300"
                    android:singleLine="false"
                    android:padding="5dp" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:backgroundTint="@color/dark"
                android:textColor="@color/white"
                android:text="Submit" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>