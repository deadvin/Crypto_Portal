<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_border"
    tools:context=".fragment_prices">

    <RelativeLayout
        android:id="@+id/loadingPanel_altcoins"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="DIVIATION FROM BITCOIN"
        android:gravity="center"
        android:fontFamily="@font/cc"
        app:fontFamily="@font/cc"
        android:padding="7dp"
        android:background="@color/gray"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:transformPivotY="120dp"
        app:srcCompat="@drawable/shadow" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/textView00"
        app:srcCompat="@drawable/shadow" />


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout2"
        android:layout_below="@+id/textView00"
        android:layout_marginBottom="0dp"
        android:divider="#00000000"
        android:dividerHeight="10dp"
        android:fadingEdgeLength="28dp"
        android:padding="5dp"
        android:requiresFadingEdge="vertical"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/dark"
        android:orientation="horizontal"
        android:padding="0dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/button13"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            app:tint="@color/white"
            android:src="@drawable/alert"
            />

        <ImageButton
            android:id="@+id/button14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            app:tint="@color/white"
            android:src="@drawable/book"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView4"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_above="@+id/linearLayout1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/shadow_r" />


    <ImageView
        android:id="@+id/imageView5"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/shadow_r" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="0dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:weightSum="4">

        <Spinner
            style="@style/SpinnerThemeDark"
            android:id="@+id/spinner_price"
            android:background="@color/dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:spinnerMode="dropdown"
            android:popupBackground="@color/dark"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="5dp"

            />

        <ImageView
            android:id="@+id/imageView66"
            android:visibility="visible"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:padding="6dp"
            android:layout_weight="0.1"
            android:translationX="-16dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/arr_white" />

        <LinearLayout
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/dark"
                android:fontFamily="@font/cc"
                android:text="Price"
                android:padding="0dp"
                android:textColor="@color/white"
                app:backgroundTint="@color/dark"
                app:fontFamily="@font/cc" />

            <ImageView
                android:id="@+id/filter_price"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:padding="13dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/sort_up" />
        </LinearLayout>

       <LinearLayout
                android:id="@+id/ll_name"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:weightSum="3">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/dark"
                    android:fontFamily="@font/cc"
                    android:text="Name"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/dark"
                    app:fontFamily="@font/cc" />

                <ImageView
                    android:id="@+id/filter_name"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:padding="13dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/sort_off" />
            </LinearLayout>

        </LinearLayout>



    <ImageView
        android:id="@+id/imageView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/shadow_r" />


</RelativeLayout>